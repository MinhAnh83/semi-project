    {% block body %}
<style>
    .form-group{
        padding: 10px;
    }
    label{
        font-weight: 500;
    }
    .form-control{
        min-width: 1000px;
    }
    .form__review{
        display: flex;
        box-shadow: 10px 10px 8px 10px #888888;
        padding: 10px;
        border: 1px solid #ccc;
        justify-content: center;
    }
    form {
        box-shadow: 10px 10px 8px 10px #888888;
        border-radius: 10px;
        padding: 10px;
    }
    .fa-slideshare:before {
        content: "\f1e7";
        background-color: #9ec4d3;
        border-radius: 15px;
        padding: 5px 10px;
    }
    body{
        background-color: #ebeef1;
    }
    .dropdown-item:focus, .dropdown-item:hover {
        color: #fff;
        text-decoration: none;
        background-color: #a9c6e3;
        font-weight: 400;}
</style>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand" href="{{ path('get_product') }}">
                    LOGO HERE
                </a>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('get_product') }}">HOME</a>
                        </li>

                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('get_product') }}">CONTACT</a>
                        </li>
                    </ul>
                </div>
                <!-- Links -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">



                        <a class="nav-link" href="{{ path('app_login') }}">Login</a>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('register') }}">Register</a>
                        </li>

                        <!-- Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                UPLOAD
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('review_create') }}">
                                      Review</a>
                                <a class="dropdown-item" href="{{ path('product_create_page') }}">Product</a>

                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
<div>
    <img src="{{ asset('upload/imageProduct/review.png' ) }}" alt="review" width="100%" height="385px" style="text-align: center;align-items: center;justify-content: center" >
</div>
        <div class="body" style="background-color: #96a2b2">
        <div class="form__review" style="background-color: white;">


        {{ form_start(form) }}
            <p style="color: black; font-weight: 500; margin-left: auto; margin-right: auto; margin-top: 20px;
         display: flex;justify-content: center; background-color: #5eb5e0;  ">
                Hello  {{ app.user.email }}.
                Thanks for your contribution
            </p>
            <div class="headerform" style="background-color: black; height: 10px; border-radius: 5px; display: flex;justify-content: center; margin-bottom: 15px; "> <i class="fa fa-slideshare" style="font-size:40px;justify-content: center; align-items: center;  margin-bottom: 15px;"></i></div>


        <div class="form-group" style="margin-top:20px;">
            <label for="images" style="margin-right: 10px;">Product    <i class="fa fa-book"></i>: </label>
            {{ form_widget(form.product,{

            }) }}

        </div>
        <div class="form-group">
        <label for="author">Review content</label>
        {{ form_widget(form.ReviewContent,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Content'
            }
        }) }}
    </div>
            <div class="form-group">
                <label for="ranking">Ranking <span>(1->10):</span></label>
                {{ form_widget(form.Ranking,{
                    'attr':{
                        'class':'form-control',
                        'placeholder': 'Ranking'
                    }
                }) }}
            </div>





    <div class="form-group">
        <label for="due_date">Date of review <i class="fa fa-calendar-check-o"></i>:</label>
        {{ form_widget(form.ReviewDate,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>



    <input type="submit" name="review_create" value="UPLOAD " class="btn  fa fa-upload" style="margin-left:20px; margin-left: auto;
           margin-right: auto; display: flex; background-color: #f577b1; color: white; font-weight:500;"/>

    {{ form_end(form) }}
        </div>
        </div>
{% endblock %}
    </body>
</html>
