    {% block body %}
    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }
        label {
            font-weight: 500;
        }
        li:hover.nav-item{
            background-color: gray;
        }
        form {
            box-shadow: 10px 10px 8px 10px #888888;
            border-radius: 10px;
            padding: 10px;
            margin-top: 10px;
            background-color: white;
            margin-bottom: 15px;
        }
        body{
            background-color: #ebeef1;
        }
        .fa-book:before {
            content: "\f02d";
            border-radius: 26px;
            background-color: #e5819d;
            padding: 10px;
        }
        .dropdown-item:focus, .dropdown-item:hover {
            color: #fff;
            text-decoration: none;
            background-color: #a9c6e3;
            font-weight: 400;}
    </style>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" href="{{ path('get_product') }}">
                NGUYỆT CÁT
            </a>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('get_product') }}">HOME</a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('contact') }}">CONTACT</a>
                    </li>
                </ul>
            </div>
            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">



                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('register') }}">Register</a>
                    </li>

                    <!-- Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            UPLOAD <i class="fa fa-upload"></i>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('review_create') }}">Review</a>
                            <a class="dropdown-item" href="{{ path('product_create_page') }}">Product</a>

                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
<div class="container">
    {{ form_start(form) }}
    <div class="form">
        <p style="color: black; font-weight: 500; margin-left: auto; margin-right: auto; margin-top: 20px;
         display: flex;justify-content: center; background-color: #5eb5e0;  ">
            Hello  {{ app.user.email }}.
            Thanks for your contribution
        </p>
        <i class="fa fa-book" style="display: flex;justify-content: center; font-size: 30px;"></i>
    <div class="form-group">
        <label for="author">Author</label>
        {{ form_widget(form.author,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Author '
            }
        }) }}
    </div>


    <div class="form-group">
        <label for="category">Category</label>
        {{ form_widget(form.category,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Category'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="ProductName">Product Name:</label>
        {{ form_widget(form.ProductName,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Product name'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="Tag">Tag</label>
        {{ form_widget(form.tag,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="author">Number of chapter</label>
        {{ form_widget(form.NumberChapter,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>
    {#    <div class="form-group">#}
    {#        <label for="author">Content review</label>#}
    {#        {{ form_widget(form.review,{#}
    {#            'attr':{#}
    {#                'class':'form-control'#}
    {#            }#}
    {#        }) }}#}
    {#    </div>#}




    <div class="form-group">
        <label for="due_date">Date of publish:</label>
        {{ form_widget(form.ProductDate,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>

    <div class="form-group">
        <label for="images">Image    <i class="fa fa-file-image-o"></i></label>
        {{ form_widget(form.ProductImages,{

        }) }}
    </div>

    <input type="submit" name="product_create_page" value="UPLOAD" class="btn " style="margin-left: auto;
    margin-right: auto; display: flex; background-color: #f577b1; color: white; font-weight:500;"/>
    </div>
{{ form_end(form) }}
    {% endblock %}
</div>
