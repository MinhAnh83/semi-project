            </div>
            {{ form_start(form) }}
                <h3>Drop Us a Message</h3>

<div class="row">
                    <div class="col-md-6">
                        <div class="form-group">

                                <label for="contactname" class="">Your name</label>
                                {{ form_widget(form.contactname,{
                                    'attr':{
                                        'class':'form-control',
                                        'placeholder': 'Name '
                                    }
                                }) }}
                            </div>

                        <div class="form-group">
                            <label for="contactemail" class="">Email</label>
                            {{ form_widget(form.contactemail,{
                                'attr':{
                                    'class':'form-control',
                                    'placeholder': 'Email'
                                }
                            }) }}
                        </div>
                        <div class="form-group">
                            <label for="subject" class="">Subject</label>
                            {{ form_widget(form.subject,{
                                'attr':{
                                    'class':'form-control',
                                    'placeholder': 'subject'
                                }
                            }) }}
                        </div>
                    </div>
             <div class="col-md-6"   >
                        <div class="form-group">
                            <label for="message" class="">Message</label>
                            {{ form_widget(form.message,{
                                'attr':{
                                    'class':'form-control',
                                    'placeholder': 'Message '
                                }
                            }) }}
                        </div>
             </div>


</div>
            <div class="col-md-6">

                <div class="text-center text-md-left" style="margin-top: 40px;">
