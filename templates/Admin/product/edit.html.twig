{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="author">Author</label>
        {{ form_widget(form.author,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>


    <div class="form-group">
        <label for="category">Category</label>
        {{ form_widget(form.category,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="ProductName">Product Name:</label>
        {{ form_widget(form.ProductName,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Product name'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="Tag">Tag</label>
        {{ form_widget(form.tag,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="author">Number of chapter</label>
        {{ form_widget(form.NumberChapter,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>




    <div class="form-group">
        <label for="due_date">Date of publish:</label>
        {{ form_widget(form.ProductDate,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>

    <div class="form-group">
        <label for="images">Image</label>
        {{ form_widget(form.ProductImages,{

        }) }}
    </div>

    <input type="submit" name="product_create" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
