        </tr>
        </thead>
        <tbody>
        {% for product in products %}
        <tr>
            <th scope="row">{{ product.id }}</th>
            <td>{{ product.ProductName }}</td>
            <td>{{ product.author.AuthorName }}</td>
            <td>{{ product.category.Catname }}</td>


            <td>{{ product.ProductDate|date('F j,Y, g:i a') }}</td>
            <td> <a href="{{ asset('upload/imageProduct/' ~ product.ProductImages) }}">View image</a><td>

            <td>
                <a href="{{path('review_details',{'id':product.id})}} " class='btn btn-primary'>Review</a>
                <a href="{{path('product_details',{'id':product.id})}} " class='btn btn-success'>View</a>
                <a href="{{path('product_edit',{'id':product.id})}}" class='btn btn-default'><i class="fa fa-pencil-square-o" style="color: black; font-size: 20px"></i></a>

            </td>
        </tr>
