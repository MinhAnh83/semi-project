<div class="bs-example" data-example-id="striped-table">
    <table class="table table-striped">
        <thead>
        <tr style="background-color: black; color: white; font-weight: 500">

            <th>#</th>
            <th>Product </th>
            <th>Author <i class="fa fa-grav" ></i></th>
